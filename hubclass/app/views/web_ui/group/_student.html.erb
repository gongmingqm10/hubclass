<div class="table-responsive">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>姓名</th>
      <th>学号</th>
      <th>班级</th>
      <th>点赞</th>
      <th>缺勤</th>
    </tr>
    </thead>
    <tbody>
    <tr data-ng-repeat="student in group.members">
      <td>{{student.username}}</td>
      <td>{{student.user_number}}</td>
      <td>{{student.branch}}</td>
      <td><a href="javascript:void(0);" data-ng-click="vote_student(student.user_id, $event)">{{student.record.vote}}</a></td>
      <td><a href="javascript:void(0);" data-ng-click="absent_student(student.user_id, $event)">{{student.record.absence}}</a></td>
    </tr>
    </tbody>
  </table>
</div>