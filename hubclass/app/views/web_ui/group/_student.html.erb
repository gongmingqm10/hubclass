<div class="table-responsive">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>姓名</th>
      <th>学号</th>
      <th>班级</th>
      <th>点赞</th>
      <th>缺勤</th>
    </tr>
    </thead>
    <tbody>
    <tr data-ng-repeat="student in group.members">
      <td>{{student.username}}</td>
      <td>{{student.user_number}}</td>
      <td>{{student.branch}}</td>
      <td>
        <a href="javascript:void(0);" data-ng-click="vote_student(student.user_id, $event)">
            <span class="icon icon-thumbs-up-alt text-primary"></span>
        </a>
        <span class="text-primary vote">{{student.record.vote}}</span>
      </td>
      <td>
        <a href="javascript:void(0);" data-ng-click="absent_student(student.user_id, $event)">
          <span class="icon icon-clock text-danger"></span>
        </a>
        <span class="text-danger absence">{{student.record.absence}}</span>
      </td>
    </tr>
    </tbody>
  </table>
</div>